{
  "name": "gsd-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "GSD (Getting Shit Done) - Personal productivity app",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --recursive --filter \"./apps/*\" dev",
    "dev:backend": "pnpm --filter @gsd/backend dev",
    "dev:frontend": "pnpm --filter @gsd/frontend dev",
    "build": "pnpm build:packages && pnpm build:apps",
    "build:packages": "pnpm --filter \"./packages/*\" --sequential build",
    "build:apps": "pnpm --filter \"./apps/*\" --sequential build",
    "test": "pnpm --recursive --filter \"./apps/*\" test",
    "test:backend": "pnpm --filter @gsd/backend test",
    "lint": "pnpm --recursive lint",
    "typecheck": "pnpm --recursive typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "pnpm --filter @gsd/backend db:migrate",
    "db:generate": "pnpm --filter @gsd/backend db:generate",
    "db:seed": "pnpm --filter @gsd/backend db:seed",
    "db:studio": "pnpm --filter @gsd/backend db:studio",
    "clean": "pnpm --recursive exec rm -rf dist node_modules"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
