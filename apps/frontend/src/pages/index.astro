---
import '../styles/global.css';

const apiUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:3000';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>GSD - Getting Shit Done</title>
  </head>
  <body class="min-h-screen bg-gray-50 flex flex-col">
    <!-- Header -->
    <header class="w-full py-6 px-4">
      <div class="max-w-7xl mx-auto">
        <h1 class="text-2xl font-bold text-gray-900">GSD</h1>
      </div>
    </header>

    <!-- Hero Section -->
    <main class="flex-1 flex items-center justify-center px-4" role="main">
      <div class="max-w-md w-full text-center space-y-8">
        <div class="space-y-4">
          <h2 class="text-4xl font-bold text-gray-900">GSD - Getting Shit Done</h2>
          <p class="text-xl text-gray-600">
            A simple, keyboard-first productivity app for focused work.
          </p>
        </div>

        <!-- Sign In Button -->
        <div>
          <a
            href={`${apiUrl}/auth/google`}
            class="inline-block w-full max-w-xs px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            aria-label="Sign in with Google"
          >
            Sign in with Google
          </a>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="w-full py-6 px-4 border-t border-gray-200">
      <div class="max-w-7xl mx-auto text-center text-sm text-gray-500 space-x-4">
        <a href="/privacy" class="hover:text-gray-700 transition-colors"> Privacy Policy </a>
        <span aria-hidden="true">Â·</span>
        <a href="/terms" class="hover:text-gray-700 transition-colors"> Terms of Service </a>
      </div>
    </footer>
  </body>
</html>
